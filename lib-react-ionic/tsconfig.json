{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    "types": ["vite/client"]
  },
  "include": ["src/**/*"]
}
